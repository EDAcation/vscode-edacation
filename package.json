{
  "publisher": "edacation",
  "name": "edacation",
  "displayName": "EDAcation",
  "description": "Learning environment for digital hardware design with Yosys and nextpnr.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:edacation.newProject",
    "onCommand:edacation.openProject",
    "onCommand:edacation.closeProject",
    "onCommand:workbench.action.tasks.runTask",
    "onCustomEditor:edacation.project",
    "onView:edacation-projects",
    "onView:edacation-files",
    "onView:edacation-configuration"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "edacation.newProject",
        "category": "EDAcation",
        "title": "New Project",
        "icon": "$(file-directory-create)"
      },
      {
        "command": "edacation.openProject",
        "category": "EDAcation",
        "title": "Open Project",
        "icon": "$(folder-opened)"
      },
      {
        "command": "edacation.closeProject",
        "category": "EDAcation",
        "title": "Close Project",
        "icon": "$(close)"
      },
      {
        "command": "edacation.addFile",
        "category": "EDAcation",
        "title": "Add Existing File",
        "icon": "$(add)"
      },
      {
        "command": "edacation.newFile",
        "category": "EDAcation",
        "title": "New File",
        "icon": "$(file-add)"
      },
      {
        "command": "edacation.removeFile",
        "category": "EDAcation",
        "title": "Remove File",
        "icon": "$(remove)"
      },
      {
        "command": "edacation.openProjectConfiguration",
        "category": "EDAcation",
        "title": "Open Project Configuration"
      },
      {
        "command": "edacation.runYosys",
        "category": "EDAcation",
        "title": "Synthesize using Yosys"
      },
      {
        "command": "edacation.runNextpnr",
        "category": "EDAcation",
        "title": "Place and Route using nextpnr"
      }
    ],
    "customEditors": [
      {
        "viewType": "edacation.project",
        "displayName": "EDA Project",
        "selector": [
          {
            "filenamePattern": "*.edaproject"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "edacation.newProject",
          "when": "view == edacation-projects",
          "group": "navigation"
        },
        {
          "command": "edacation.openProject",
          "when": "view == edacation-projects",
          "group": "navigation"
        },
        {
          "command": "edacation.addFile",
          "when": "view == edacation-files",
          "group": "navigation"
        },
        {
          "command": "edacation.newFile",
          "when": "view == edacation-files",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "edacation.closeProject",
          "when": "view == edacation-projects",
          "group": "inline"
        },
        {
          "command": "edacation.removeFile",
          "when": "view == edacation-files",
          "group": "inline"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "yosys",
        "required": [
          "project"
        ],
        "properties": {
          "project": {
            "type": "string",
            "description": "Path of the EDA project."
          }
        }
      },
      {
        "type": "nextpnr",
        "required": [
          "project"
        ],
        "properties": {
          "project": {
            "type": "string",
            "description": "Path of the EDA project."
          }
        }
      }
    ],
    "views": {
      "edacation-container": [
        {
          "id": "edacation-projects",
          "name": "Projects"
        },
        {
          "id": "edacation-files",
          "name": "Files"
        },
        {
          "id": "edacation-actions",
          "name": "Actions"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "edacation-container",
          "title": "EDAcation",
          "icon": "resources/icons/edacation.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "edacation-projects",
        "contents": "No EDA project are open.\n[New Project](command:edacation.newProject)\n[Open Project](command:edacation.openProject)\nTo learn more about how to use EDA projects [read the documentation](https://github.com/EDAcation/vscode-edacation)."
      },
      {
        "view": "edacation-actions",
        "contents": "[Open Configuration](command:edacation.openProjectConfiguration)\n[Synthesize using Yosys](command:edacation.runYosys)\n[Place and Route using nextpnr](command:edacation.runNextpnr)\n"
      }
    ]
  },
  "scripts": {
    "postinstall": "cd worker && npm install && cd ..",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint ./src ./worker/src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/vscode": "^1.73.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-web": "^0.0.32",
    "assert": "^2.0.0",
    "eslint": "^8.26.0",
    "mocha": "^10.1.0",
    "process": "^0.11.10",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "path-browserify": "^1.0.1"
  }
}
