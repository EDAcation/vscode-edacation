{
    "compilerOptions": {
        "target": "es2020",
        "outDir": "dist",
        "lib": ["esnext", "webworker"],
        "esModuleInterop": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": ["node_modules", "scripts", "src/views"]
}
