{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["**/*", "**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "lib": ["es2022", "DOM", "DOM.Iterable"],
        "types": ["node"],

        // fix error due to vue tsconfig extends
        "allowImportingTsExtensions": false
    }
}
